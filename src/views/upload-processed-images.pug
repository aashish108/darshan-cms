html
  include includes/head.pug
  body.page-uploadProcessedImages
    section.hero.is-fullheight
      .hero-head
        include includes/header.pug
      .hero-body
        .container.is-fluid
          .columns
            include includes/adminSidebar.pug
            form(action="/darshan-app/stage2/upload-processed-images/process" method="post" enctype="multipart/form-data")
              .column
                .columns
                  .column.is-vcentered
                    .file.has-name.is-boxed.is-vcentered
                      label.file-label.box
                        input#files.file-input.is-large.is-boxed.has-name(type='file' name='processedDarshanPhotos' multiple onchange="updateFileNames();")
                        span.file-cta
                          span.file-icon
                            i.fas.fa-upload
                          span.file-label
                            | Select several files via shift-click
                        .columns.is-centered
                          .column.is-full
                            div#filesNames.is-full.is-large
                .columns.is-vcentered
                  .column
                    input#fbToken.input.is-invisible(type='text' name='fbPageToken')
                    textarea.textarea.box(placeholder='Outfit Details' name='outfitDetails')
                    input.input(type='date' name='darshanDate')
                    button.button.is-success(type='submit') Submit
      
    include includes/footerScripts.pug
    script(defer='' src='/darshan-app/public/js/initialize-all-bulma-calendars.js')
    script(defer='' src='/darshan-app/public/js/uploading-raw-files.js')